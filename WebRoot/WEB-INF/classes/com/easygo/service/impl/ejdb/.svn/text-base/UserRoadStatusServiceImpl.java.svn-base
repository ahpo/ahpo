package com.easygo.service.impl.ejdb;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.easygo.dao.ejdb.UserRoadStatusMapper;
import com.easygo.service.ejdb.UserRoadStatusService;
import com.easygo.vo.ejdb.UserRoadStatus;
import com.easygo.vo.ejdb.UserRoadStatusExample;
import com.pub.service.impl.ServiceImpl;
import com.pub.util.constant.Constants;

/**
 * @ClassName: UserRoadStatusServiceImpl
 * @Description: TODO(这里用一句话描述这个类的作用)
 * @author zgr
 * @date 2012-9-12 下午2:59:51
 * @version 1.0
 */
@Service("userRoadStatusService")
public class UserRoadStatusServiceImpl extends ServiceImpl implements
		UserRoadStatusService {

	@Resource
	private UserRoadStatusMapper userRoadStatusMapper;

	public void setUserRoadStatusMapper(
			UserRoadStatusMapper userRoadStatusMapper) {
		this.userRoadStatusMapper = userRoadStatusMapper;
	}

	/**
	 * @param example
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#countByExample(com.easygo.vo.ejdb.UserRoadStatusExample)
	 */
	@Override
	public int countByExample(UserRoadStatusExample example) {
		logger.info("select count from saveuserroadstatusinfo by example...");
		return userRoadStatusMapper.countByExample(example);
	}

	/**
	 * @param id
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#deleteByPrimaryKey(java.lang.Integer)
	 */
	@Override
	public int deleteByPrimaryKey(Integer id) {
		logger.info("delete record from saveuserroadstatusinfo by primarykey["
				+ id + "]...");
		return userRoadStatusMapper.deleteByPrimaryKey(id);
	}

	/**
	 * @param record
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#insertSelective(com.easygo.vo.ejdb.UserRoadStatus)
	 */
	@Override
	public int insertSelective(UserRoadStatus record) {
		logger.info("insert record[" + record.getUsername()
				+ "] into saveuserroadstatusinfo...");
		return userRoadStatusMapper.insertSelective(record);
	}

	/**
	 * @param example
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#selectByExampleWithBLOBs(com.easygo.vo.ejdb.UserRoadStatusExample)
	 */
	@Override
	public List<UserRoadStatus> selectByExampleWithBLOBs(
			UserRoadStatusExample example) {
		logger.info("select list from saveuserroadstatusinfo by exmaple...");
		return userRoadStatusMapper.selectByExampleWithBLOBs(example);
	}

	/**
	 * @param example
	 * @param offset
	 * @param pageSize
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#selectPageByExampleWithBLOBs(com.easygo.vo.ejdb.UserRoadStatusExample,
	 *      int, int)
	 */
	@Override
	public List<UserRoadStatus> selectPageByExampleWithBLOBs(
			UserRoadStatusExample example, int offset, int pageSize) {
		logger.info("select page info from saveuserroadstatusinfo by example...");
		return userRoadStatusMapper.selectPageByExampleWithBLOBs(example,
				offset, pageSize);
	}

	/**
	 * @param id
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#selectByPrimaryKey(java.lang.Integer)
	 */
	@Override
	public UserRoadStatus selectByPrimaryKey(Integer id) {
		logger.info("select record from saveuserroadstatusinfo by primarykey["
				+ id + "]...");
		return userRoadStatusMapper.selectByPrimaryKey(id);
	}

	/**
	 * @param record
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#updateByPrimaryKeyWithBLOBs(com.easygo.vo.ejdb.UserRoadStatus)
	 */
	@Override
	public int updateByPrimaryKeyWithBLOBs(UserRoadStatus record) {
		logger.info("update record into saveuserroadstatusinfo by primarykey["
				+ record.getId() + "]...");
		return userRoadStatusMapper.updateByPrimaryKeyWithBLOBs(record);
	}

	/**
	 * @param example
	 * @param id
	 * @param flag
	 * @return
	 * @see com.easygo.service.ejdb.UserRoadStatusService#checkSimilarity(com.easygo.vo.ejdb.UserRoadStatusExample,
	 *      java.lang.Integer, int)
	 */
	@Override
	public boolean checkSimilarity(UserRoadStatusExample example, Integer id,
			int flag) {
		List<UserRoadStatus> list = userRoadStatusMapper
				.selectByExample(example);
		if (list == null || list.size() < 1) {
			return true;
		}

		if (flag == Constants.CHECKSIMILARITY_MODE_UPDATE) { // update
			if (list.size() == 1 && list.get(0).getId().equals(id)) {
				return true;
			}
		}

		// other return false
		return false;
	}

}
