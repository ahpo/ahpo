@Controller
@Scope("prototype")
public class RoadPositionAction extends ActionSupport {

	private static final long serialVersionUID = 1L;
	private final Logger logger = LoggerFactory.getLogger(this.getClass());

	private Integer id;
	private Integer roadid;
	private double roadlatitdue;
	private double roadlongitdue;
	private String recordtime;
	private Date updatatime;
	private String person;
	private String back;
	private List<SysFunction> funcList;

	private Integer ids[];
	private List<RoadPosition> resultList;
	private OperateResult operateResult = new OperateResult();
	private List<RoadInfo> roads;

	private PageHandle pageHandler;
	private Page page;
	private String pageMethod = "";
	private String currentPage;

	@Resource
	private RoadPositionService roadPositionService;
	@Resource
	private RoadInfoService roadInfoService;
	@Resource
	private SysUserService sysUserService;
	@Resource
	private SysRoleService sysRoleService;

	public void setSysUserService(SysUserService sysUserService) {
		this.sysUserService = sysUserService;
	}

	public void setSysRoleService(SysRoleService sysRoleService) {
		this.sysRoleService = sysRoleService;
	}

	public void setRoadInfoService(RoadInfoService roadInfoService) {
		this.roadInfoService = roadInfoService;
	}

	public void setRoadPositionService(RoadPositionService roadPositionService) {
		this.roadPositionService = roadPositionService;
	}

	public String roadPositionQuery() {
		String resCode = Constants.QUERY_ROADPOSITION_QUERY;
		Map<String, Object> session = ActionContext.getContext().getSession();

		String resType = (String) session.get(Constants.RES_TYPE);
		Integer urid;
		if (Constants.RES_TYPE_USER.equals(resType)) {
			urid = (Integer) session.get(Constants.UID);
			funcList = sysUserService.selectFuncByUidAndResCode(urid, resCode);
		} else {
			urid = (Integer) session.get(Constants.RID);
			funcList = sysRoleService.selectFuncByRidAndResCode(urid, resCode);
		}
		if (funcList == null || funcList.isEmpty()) {
			return LOGIN;
		}
		int totalRows = roadPositionService.countByExample(null);
		pageHandler = new PageHandle();
		page = pageHandler.getPage(null, currentPage, pageMethod, totalRows);
		resultList = roadPositionService.selectPageByExample(null,
				page.getStartRow(), page.getPageSize());
		return SUCCESS;
	}

	public String roadPositionToUpdate() {
		RoadPosition record = roadPositionService.selectByPrimaryKey(id);
		this.roadid = record.getRoadid();
		this.roadlatitdue = record.getRoadlatitdue();
		this.roadlongitdue = record.getRoadlongitdue();
		this.recordtime = record.getRecordtime();
		this.updatatime = record.getUpdatadate();
		this.back = record.getBack();
		roads = roadInfoService.selectByExample(null);
		return SUCCESS;
	}

	@SysOperLogAnnotation(value = "修改经纬度信息")
	public String roadPositionUpdate() {
		Map<String, String> parms = new HashMap<String, String>();
		parms.put("currentPage", currentPage);
		operateResult.setParms(parms);
		operateResult.setOperation(WebConstants.ROADPOSITION_UPDATE);
		operateResult.setUrl("roadPositionQuery.action");
		RoadPosition record = roadPositionService.selectByPrimaryKey(id);
		record.setRoadid(roadid);
		record.setRoadlatitdue(roadlatitdue);
		record.setRoadlongitdue(roadlongitdue);
		record.setRecordtime(recordtime);
		record.setUpdatadate(new Date());
		if ("".equals(back.trim())) {
			back = null;
		}
		record.setBack(back);
		RoadPositionExample example = new RoadPositionExample();
		example.createCriteria().andRoadidEqualTo(roadid);
		if (!roadPositionService.checkSimilarity(example, id, 0)) {
			logger.info("cannot update, for the inputed roadid is already exist");
			operateResult.setResult(WebConstants.OPERATE_RESULT_FAIL);
			operateResult
					.setReason(WebConstants.OPERATERESULT_REASON_ROADPOSITION_UPDATE);
			return ERROR;
		}
		int rtn = roadPositionService.updateByPrimaryKey(record);
		if (rtn != 1) {
			logger.info("fail to update, unknown reason");
			operateResult.setResult(WebConstants.OPERATE_RESULT_FAIL);
			operateResult
					.setReason(WebConstants.OPERATERESULT_REASON_ROADPOSITION_UPDATE);
			return ERROR;
		}

		operateResult.setResult(WebConstants.OPERATE_RESULT_SUCCESS);
		return SUCCESS;
	}

	public String roadPositionToCreate() {
		roads = roadInfoService.selectByExample(null);
		return SUCCESS;
	}

	@SysOperLogAnnotation(value = "创建经纬度信息")
	public String roadPositionCreate() {
		operateResult.setOperation(WebConstants.ROADPOSITION_CREATE);
		operateResult.setUrl("roadPositionQuery.action");
		RoadPosition record = new RoadPosition();
		record.setRoadid(roadid);
		record.setRoadlatitdue(roadlatitdue);
		record.setRoadlongitdue(roadlongitdue);
		record.setRecordtime(recordtime);
		record.setUpdatadate(new Date());
		person = (String) ActionContext.getContext().getSession()
				.get(Constants.USER_NAME);
		record.setPerson(person);
		if ("".equals(back.trim())) {
			back = null;
		}
		record.setBack(back);
		RoadPositionExample example = new RoadPositionExample();
		example.createCriteria().andRoadidEqualTo(roadid);
		if (!roadPositionService.checkSimilarity(example, id, 1)) {
			logger.info("cannot update, for the inputed roadid is already exist");
			operateResult.setResult(WebConstants.OPERATE_RESULT_FAIL);
			operateResult
					.setReason(WebConstants.OPERATERESULT_REASON_ROADPOSITION_CREATE);
			return ERROR;
		}
		int rtn = roadPositionService.insertSelective(record);
		if (rtn != 1) {
			logger.info("fail to create, unknown reason");
			operateResult.setResult(WebConstants.OPERATE_RESULT_FAIL);
			operateResult
					.setReason(WebConstants.OPERATERESULT_REASON_ROADPOSITION_CREATE);
			return ERROR;
		}

		operateResult.setResult(WebConstants.OPERATE_RESULT_SUCCESS);
		return SUCCESS;
	}

	@SysOperLogAnnotation(value = "创建经纬度信息")
	public String roadPositionDelete() {
		operateResult.setOperation(WebConstants.ROADPOSITION_DELETE);
		operateResult.setUrl("roadPositionQuery.action");
		for (int i = 0; i < ids.length; i++) {
			roadPositionService.deleteByPrimaryKey(ids[i]);
			logger.info("record[" + ids[i] + "] is deleted");
		}
		operateResult.setResult(WebConstants.OPERATE_RESULT_SUCCESS);
		return SUCCESS;
	}

