package com.easygo.service.impl.ejdb;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.easygo.dao.ejdb.RoadReportMapper;
import com.easygo.service.ejdb.RoadReportService;
import com.easygo.vo.ejdb.RoadReportExample;
import com.easygo.vo.ejdb.RoadReportWithBLOBs;
import com.pub.service.impl.ServiceImpl;

@Service("roadReportService")
public class RoadReportServiceImpl extends ServiceImpl implements RoadReportService {

	@Resource
	private RoadReportMapper roadReportMapper;

	public RoadReportMapper getRoadReportMapper() {
		return roadReportMapper;
	}

	public void setRoadReportMapper(RoadReportMapper roadReportMapper) {
		this.roadReportMapper = roadReportMapper;
	}

	public int insertSelective(RoadReportWithBLOBs record) {
		logger.info("insert data to RoadReport...");
		int rtn = 0;
		try{
			rtn = roadReportMapper.insertSelective(record);
		} catch(Exception e){
			logger.error("insert roadReport wrong", e);
		}
		return rtn;
	}

	public List<RoadReportWithBLOBs> selectByExampleWithBLOBs(RoadReportExample example) {
		// TODO Auto-generated method stub
		logger.info("query all roadReports ,return list");
		return roadReportMapper.selectByExampleWithBLOBs(example);
	}

	public List<RoadReportWithBLOBs> selectPageByExampleWithBLOBs(RoadReportExample example,
			int offset, int pageSize) {
		// TODO Auto-generated method stub
		logger.info("query roadReports by example, return list");
		return roadReportMapper.selectPageByExampleWithBLOBs(example, offset,
				pageSize);
	}

	public int countByExample(RoadReportExample example) {
		// TODO Auto-generated method stub
		logger.info("get count by example");
		return roadReportMapper.countByExample(example);
	}

	public RoadReportWithBLOBs selectByPrimaryKey(Integer id) {
		// TODO Auto-generated method stub
		logger.info("get roadReport by id");
		return roadReportMapper.selectByPrimaryKey(id);
	}

	public int updateByPrimaryKeyWithBLOBs(RoadReportWithBLOBs record) {
		// TODO Auto-generated method stub
		logger.info("update roadReport by primaryKey");
		return roadReportMapper.updateByPrimaryKeyWithBLOBs(record);
	}

	public int deleteByPrimaryKey(Integer id) {
		// TODO Auto-generated method stub
		logger.info("delete roadReport by primaryKey["+id+"]...");
		return roadReportMapper.deleteByPrimaryKey(id);
	}

